<Window x:Class="DBD_perk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBD_perk"
        mc:Ignorable="d"        
        AllowsTransparency="True"
        WindowStyle="None"
        Title="MainWindow" Height="1080" Width="1920" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent">
    <Canvas x:Name="PerkCanvas" HorizontalAlignment="Center" VerticalAlignment="Top" Width="700" Height="350">
        <Rectangle Height="128" Stroke="Black" Width="700" Opacity="0.5">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FD000000"/>
                    <GradientStop Color="#33000000" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Image x:Name="PerkBG" Height="128" Width="128" Stretch="Fill" Source="Perks/bg.png" Canvas.Left="0" Canvas.Top="0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Image x:Name="PerkImgae" Height="128" Width="128" Stretch="Fill" Source="Perks/iconPerks_aceInTheHole.png" Canvas.Left="0
               " HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Top="0"/>
        <TextBlock TextWrapping="Wrap" Canvas.Left="133" Height="128" Width="567" Foreground="White" Text="Default Text For Perk" FontSize="16"/>

    </Canvas>
</Window>
